    </div>
  </div>
  <script>
    function showDecryptConfirmation() {
      document.getElementById('decryptConfirmation').style.display = 'block';
    }
  
    function hideDecryptConfirmation() {
      document.getElementById('decryptConfirmation').style.display = 'none';
    }
  
    function decryptData(event) {
      event.preventDefault(); // prevent the form from submitting normally

      var formData = new FormData(document.getElementById('decryptForm'));
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/decrypt-collection', true);
      xhr.onload = function () {
        if (this.status == 200) {
          var filename = JSON.parse(this.response).filename;
          var decryptedLink = '/download-decrypted/' + filename;
          
        // create the download link and add it to the page
        document.getElementById('decryptedDownloadLink').href = decryptedLink;
        document.getElementById('decryptDownloadLink').style.display = 'block';
        } else {
          // show error message
          alert('Error: ' + this.response);
        }
      };
      xhr.send(formData);
    }
