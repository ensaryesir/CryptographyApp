                      <option value="ECC">ECC</option>
                      <option value="RSA">RSA</option>
                      <option value="CHACHA20">CHACHA20</option>
                      <option value="TWOFISH">TWOFISH</option>
                    </select>
                  </div>
                  <button type="submit" class="btn btn-primary">Decrypt</button>
                  <button type="button" class="btn btn-secondary" onclick="hideDecryptConfirmation()">Back</button>
                </div>
              </form>
              <!-- Add download link here -->
              <div id="decryptDownloadLink" style="display: none;">
                <a id="decryptedDownloadLink" href="#">Download Decrypted File</a>
