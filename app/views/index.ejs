                <div class="form-group">
                  <label for="encryptedFile" class="custom-file-upload">Choose Encrypted File</label>
                  <input type="file" class="form-control-file" id="encryptedFile" name="encryptedFile" required>
                </div>
                <button type="button" class="btn btn-primary" onclick="showDecryptConfirmation()">Next</button>
