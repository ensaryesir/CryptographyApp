<section class="testimonial section-padding" data-scroll-index='4'>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="sectioner-header text-center white">
          <h3>Upload & Encrypt Database</h3>
          <span class="line"></span>
          <p class="white">Upload your collection (as a json file) to encrypt it.</p>
        </div>
        <div class="row">
          <div class="offset-md-2 col-md-8 col-sm-12">
            <div class="section-content">
              <form id="uploadForm" action="/encrypt-collection" method="POST" enctype="multipart/form-data" onsubmit="encryptData(event)">
                <div class="form-group">
                  <label for="databaseFile" class="custom-file-upload">Choose File</label>
                  <input type="file" class="form-control-file" id="databaseFile" name="databaseFile" required>
                </div>
                <button type="button" class="btn btn-primary" onclick="showAlgorithmSelection()">Next</button>
                <div id="algorithmSelection" style="display: none;">
                  <div class="form-group">
                    <label for="encryptionAlgorithm">Select Encryption Algorithm:</label>
                    <select class="form-control" id="encryptionAlgorithm" name="encryptionAlgorithm">
                      <option value="AES">AES</option>
                      <option value="TDEA">TDEA</option>
                      <option value="ECC">ECC</option>
                      <option value="RSA">RSA</option>
                      <option value="CHACHA20">CHACHA20</option>
                      <option value="TWOFISH">TWOFISH</option>
                    </select>
                  </div>
                  <button type="submit" class="btn btn-primary">Encrypt</button>
                  <button type="button" class="btn btn-secondary" onclick="hideAlgorithmSelection()">Back</button>
                </div>
              </form>
              <!-- Indirme linklerini buraya ekleyin -->
              <div id="downloadLinks" style="display: none;">
                <a id="encryptedDownloadLink" href="#">Download Encrypted File</a><br>
              </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function showAlgorithmSelection() {
      document.getElementById('algorithmSelection').style.display = 'block';
    }
  
    function hideAlgorithmSelection() {
      document.getElementById('algorithmSelection').style.display = 'none';
    }
  
    function encryptData(event) {
      event.preventDefault(); // formun normal işleyişini durdur

      var formData = new FormData(document.getElementById('uploadForm'));
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/encrypt-collection', true);
      xhr.onload = function () {
        if (this.status == 200) {
          var filename = JSON.parse(this.response).filename;
          var encryptedLink = '/download-encrypted/' + filename;
          
          // indirme linklerini oluştur ve sayfaya ekle
          document.getElementById('encryptedDownloadLink').href = encryptedLink;
          document.getElementById('downloadLinks').style.display = 'block';
        } else {
          // hata mesajını göster
          alert('Error: ' + this.response);
        }
      };
      xhr.send(formData);
    }
  </script>
</section>
<!------- Upload & Encrypt End------->


